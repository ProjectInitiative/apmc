#!/usr/bin/env bash

function message {
    printf "Error: missing arguments. please include <script-name> <current-script-ID>\n"
}

if [ -z "$1" ] || [[ ! "$2" =~ ^[0-9]+$ ]] || [ $# != 2 ]
then
    message
    exit 1
fi

process_name=$1
process_id=$2

for pid in $(pgrep -f $process_name); do
    if [ $pid != $process_id ]; then
        printf "[$(date)] : $process_name : Process is already running with PID $pid\n"
        exit 1
    fi
done

exit 0